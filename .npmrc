# NPM Configuration
# Enable provenance for supply chain security
provenance=true

# NPM registry
registry=https://registry.npmjs.org/

# Package access
access=public

# Lockfile version for npm 10+
lockfile-version=3

# Security audit level
audit-level=high

# Save exact versions (no ^ or ~)
save-exact=false

# Engine strict (enforce engines field in package.json)
engine-strict=true
