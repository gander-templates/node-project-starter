{
  "$schema": "https://platform.openai.com/schemas/claude-code-settings.json",
  "permissions": {
    "allowedTools": [
      "Read",
      "Write",
      "Edit",
      "Bash",
      "Grep",
      "Glob",
      "Task",
      "TodoWrite"
    ]
  },
  "hooks": {
    "SessionStart": {
      "description": "Setup development environment on session start",
      "command": "bash",
      "args": [
        "-c",
        "npm install --legacy-peer-deps --no-audit --prefer-offline || npm install"
      ],
      "timeout": 300000
    },
    "PostToolUse": {
      "Write": {
        "description": "Run quality checks after file write",
        "command": "bash",
        "args": ["-c", "npm run check || true"],
        "timeout": 120000
      },
      "Edit": {
        "description": "Run quality checks after file edit",
        "command": "bash",
        "args": ["-c", "npm run check || true"],
        "timeout": 120000
      }
    }
  }
}
